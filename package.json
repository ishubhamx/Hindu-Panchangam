{
  "name": "@ishubhamx/panchangam-js",
  "version": "2.0.0",
  "description": "Enhanced Indian Panchangam (Hindu Calendar) library with comprehensive Vedic features including Muhurta calculations, planetary positions, Rashi placements, and auspicious/inauspicious time calculations using Swiss Ephemeris",
  "main": "dist/src/index.js",
  "types": "dist/src/index.d.ts",
  "files": [
    "dist/src/**/*",
    "README.md"
  ],
  "scripts": {
    "test": "jest",
    "build": "tsc",
    "prepublishOnly": "npm run build",
    "vedic-example": "ts-node scripts/comprehensive-example.ts",
    "bulk-verify": "ts-node scripts/bulk-verify.ts",
    "build-web": "npx esbuild web/main.ts --bundle --outfile=web/bundle.js --format=iife --platform=browser --target=es2020"
  },
  "keywords": [
    "panchangam",
    "hindu-calendar",
    "indian-calendar",
    "tithi",
    "nakshatra",
    "yoga",
    "karana",
    "vara",
    "muhurta",
    "rashi",
    "planetary-positions",
    "vedic-astrology",
    "brahma-muhurta",
    "abhijit-muhurta",
    "rahu-kalam",
    "yamaganda-kalam",
    "gulika-kalam",
    "chandra-balam",
    "hora",
    "astronomy",
    "swiss-ephemeris"
  ],
  "author": "",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/ishubhamx/Hindu-Panchangam.git"
  },
  "dependencies": {
    "astronomy-engine": "^2.1.19",
    "luxon": "^3.6.1"
  },
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "@types/luxon": "^3.6.2",
    "@types/node": "^24.0.3",
    "@types/tz-lookup": "^6.1.2",
    "axios": "^1.10.0",
    "cheerio": "^1.1.2",
    "jest": "^30.2.0",
    "ts-jest": "^29.4.6",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3",
    "tz-lookup": "^6.1.25"
  },
  "engines": {
    "node": ">=14.0.0"
  }
}