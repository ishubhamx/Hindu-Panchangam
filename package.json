{
  "name": "@ishubhamx/panchangam-js",
  "version": "1.0.3",
  "description": "Comprehensive TypeScript/JavaScript library for calculating Indian Panchangam (Hindu Calendar) elements with high astronomical accuracy - Tithi, Nakshatra, Yoga, Karana, Vara, and auspicious timings using Swiss Ephemeris",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist/**/*",
    "README.md"
  ],
  "scripts": {
    "test": "npm run build && node dist/test/comprehensive.test.js",
    "build": "tsc",
    "prepublishOnly": "npm run build",
    "generate": "npm run build && node dist/index.js",
    "validate": "npm run build && node dist/scripts/validate.js",
    "validate-comparison": "npm run build && node dist/scripts/validate-comparison.js",
    "debug": "npm run build && node dist/scripts/debug.js",
    "simple-test": "npm run build && node dist/scripts/simple-test.js"
  },
  "keywords": [
    "panchangam",
    "panchang",
    "hindu-calendar",
    "indian-calendar",
    "vedic-astrology",
    "jyotish",
    "tithi",
    "nakshatra",
    "yoga",
    "karana",
    "vara",
    "rahu-kalam",
    "muhurta",
    "lunar-calendar",
    "astronomy",
    "swiss-ephemeris",
    "ephemeris",
    "astronomical-calculations",
    "moon-phases",
    "sunrise-sunset"
  ],
  "author": "ishubhamx",
  "homepage": "https://github.com/ishubhamx/Hindu-Panchangam#readme",
  "bugs": {
    "url": "https://github.com/ishubhamx/Hindu-Panchangam/issues"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/ishubhamx/Hindu-Panchangam.git"
  },
  "dependencies": {
    "astronomy-engine": "^2.1.19",
    "luxon": "^3.6.1"
  },
  "devDependencies": {
    "@types/luxon": "^3.6.2",
    "@types/node": "^24.0.3",
    "axios": "^1.10.0",
    "cheerio": "^1.1.0",
    "typescript": "^5.8.3"
  },
  "engines": {
    "node": ">=14.0.0"
  }
}
